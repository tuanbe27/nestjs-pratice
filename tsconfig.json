{
  "compilerOptions": {
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@Posts/*": ["posts/*"],
      "@Middlewares/*": ["middlewares/*"],
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
